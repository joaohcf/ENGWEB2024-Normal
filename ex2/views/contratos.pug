extend layout 

block title
    | Contratos 

block content
    table
        each contrato in contratos
            tr
                td
                    a(href=`/${contrato.idcontrato}`) #{contrato.idcontrato}
                td 
                    | #{contrato.objetoContrato}
                td 
                    | #{contrato.dataCelebracaoContrato}
                td 
                    | #{contrato.precoContratual}
                td 
                    a(href=`/entidades/${contrato.NIPC_entidade_comunicante}`) #{contrato.NIPC_entidade_comunicante}
                td 
                    | #{contrato.entidade_comunicante}